    function onLoad() {
       document.getElementById("div").style.background = "url('1.png') no-repeat center center ";
    }    
        
   function getPath(){
return "/sdcard/";
//var i= str.lastIndexof('/');
//return str.substring(0,i+1);
}
   function onDeviceReady(){
window.alert("Loading");
}
var media =null;
var mediaTimer=null;
function playAudio() {

            var src = 'sun.mp3';

     if (media) {
			media.pause();
			document.getElementById('audio_position').innerHTML ="next";
	    }
       media = new Media (getPath()+src , onSuccess, onError);
              
     
            media.play();

            if (mediaTimer == null) {

                mediaTimer = setInterval(function() {

                
                    media.getCurrentPosition(

                     
                        function(position) {
                            if (position > -1) {
                                setAudioPosition((position) + " sec");
                                             
                                    
                                        if(position == -0.001){

                                            media.play({numberOfLoops:"infinite"});
            
                                        }
                            }
                        },
                        
                        function(e) {

                            console.log("Error getting pos=" + e);
                            setAudioPosition("Error: " + e);

                        }
                    );
                }, 1000);
            }
        }

        function pauseAudio() {

            if (media) {
			    
			 media.pause();
			 document.getElementById('audio_position').innerHTML ="Pause";
			 
		    }
        }

        function stopAudio() {

           
            if (media) {
			media.stop();
			document.getElementById('audio_position').innerHTML ="Stop";
	    }
            }


          
          function onSuccess() {
              media.release();
              console.log("playAudio():Audio Success");
          }

          
          function onError(error) {
              alert('code: '    + error.code    + '\n' + 
                    'message: ' + error.message + '\n');
          }

         
          function setAudioPosition(position) {
              document.getElementById('audio_position').innerHTML = position;
          }

	
        function playAudio1() {

          if (media) {
			media.pause();
			document.getElementById('audio_position').innerHTML ="next";
		
	    }
         var mediap = new Media("A.mp3", function () {
           var mediaPlayer = new Media("mele.mp3", function () {
             mediap.release();
           mediaPlayer.release();
        
         }, function(e){
        alert(e.code);
        });
       mediaPlayer.play();
      
      });
      mediap.play();
           
            function pauseAudio() {

            if (mediap) {
			    
			 mediap.pause();
			 document.getElementById('audio_position').innerHTML ="Pause";
			 
		    }
        }
function pauseAudio() {

            if (mediaPlayer) {
			    
			 mediaPlayer.pause();
			 document.getElementById('audio_position').innerHTML ="Pause";
			 
		    }
        }  
            //media = new Media (src , onSuccess, onError);

            //media.play();

            if (mediaTimer == null) {

                mediaTimer = setInterval(function() {

                  
                    media.getCurrentPosition(

                       
                        function(position) {
                            if (position > -1) {
                                setAudioPosition((position) + " sec");
                                             
                                      
                                        if(position == -0.001){

                                            media.play({numberOfLoops:"infinite"});
            
                                        }
                            }
                        },
                       
                        function(e) {

                            console.log("Error getting pos=" + e);
                            setAudioPosition("Error: " + e);

                        }
                    );
                }, 1000);
            }
        }

      function pauseAudio() {

            if (mediap) {
			    
			 mediap.pause();
			 document.getElementById('audio_position').innerHTML ="Pause";
			 
		    }
        }
function pauseAudio() {

            if (mediaPlayer) {
			    
